.combo-editor
	width 400px
	height 400px
	position relative
	
	button
		height 38px
		width 58px
		align-items center
		display flex
		position absolute
		right 0
		top 1px

	.selector
		cursor pointer
		flex-direction column
		height 40px
		color color-blue-aluminium
		display flex
		align-items flex-start
		justify-content flex-start
		width 230px
		
		.display, > ul
			height 100%
			width 230px

		.display
			padding-left 1rem
			align-items center
			display flex
			justify-content space-between
			color color-blue-aluminium
			border 1px solid color-blue-rome

			&:hover
				color color-blue-endeavour
			svg
				width 18px
				height 18px
				fill color-blue-aluminium
				margin-right 5px

		> ul
			position absolute
			z-index 100

			li
				padding-left 1rem
				background-color color-white
				border solid 1px color-blue-rome
				border-top none
				height 40px
				color color-blue-aluminium
				display flex
				align-items center
				justify-content flex-start

				&:hover
					color color-blue-endeavour


